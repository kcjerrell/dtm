{
  "$schema": "../gen/schemas/desktop-schema.json",
  "description": "Capability for the main window",
  "identifier": "default",
  "permissions": [
    "clipboard-manager:allow-read-image",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-image",
    "clipboard-manager:allow-write-text",
    "clipboard:read-all",
    "clipboard:write-all",
    "core:default",
    "core:event:default",
    "core:tray:allow-new",
    "core:tray:default",
    "core:window:default",
    "core:window:allow-close",
    "core:window:allow-destroy",
    "core:window:allow-hide",
    "core:window:allow-set-focus",
    "core:window:allow-show",
    "core:window:allow-start-dragging",
    "core:window:allow-set-shadow",
    "fs:create-app-specific-dirs",
    "fs:read-app-specific-dirs-recursive",
    "fs:allow-appdata-write-recursive",
    "fs:allow-exists",
    "fs:allow-read-file",
    "fs:allow-read-dir",
    "fs:allow-stat",
    "fs:allow-write-text-file",
    "fs:allow-read",
    "fs:allow-home-read-recursive",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        "$HOME/Library/Containers/com.liuliu.draw-things/Data/*"
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        "$HOME/Library/Containers/com.liuliu.draw-things/Data/Documents/*"
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        "$HOME/Library/Containers/com.liuliu.draw-things/Data/Documents/*"
      ]
    },
    {
      "identifier": "fs:allow-read",
      "allow": [
        "$HOME/Library/Containers/com.liuliu.draw-things/Data/Documents/*"
      ]
    },
    "http:default",
    "nspopover:allow-hide-popover",
    "nspopover:allow-is-popover-shown",
    "nspopover:allow-show-popover",
    "opener:allow-open-path",
    "opener:allow-open-url",
    "opener:allow-default-urls",
    "opener:allow-reveal-item-in-dir",
    "store:default",
    "valtio:default",
    "updater:default",
    "process:default",
    "dialog:default",
    "window-state:default",
    "core:window:allow-is-visible",
    {
      "allow": [
        {
          "args": true,
          "cmd": "ffmpeg",
          "name": "ffmpeg"
        }
      ],
      "identifier": "shell:allow-spawn"
    }
  ],
  "windows": [
    "main"
  ]
}